<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.demoexamsmartphone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DemoExamSmartphone"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activities.AddRoomActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.Registration"
            android:exported="false" />
        <activity
            android:name=".Activities.InsideRoom"
            android:exported="true" />
        <activity
            android:name=".Activities.HomePage"
            android:exported="true" />
        <activity
            android:name=".Activities.Authorization"
            android:exported="true" />
        <activity
            android:name=".Activities.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.DemoExamSmartphone">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>